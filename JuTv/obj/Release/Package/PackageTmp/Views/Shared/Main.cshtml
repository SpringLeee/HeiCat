
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>黑猫TV</title>
    <meta name="keywords" content="index">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="黑猫,视频，直播，生活，游戏，全民，黑猫TV" />
    <meta name="description" content="黑猫TV,最方便的生活TV。" />
    <link rel="shortcut icon" href="~/Content/image/logo.ico" type="image/x-icon" />
    <script src="~/Content/bootstrap/js/jquery2.0.min.js"></script>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


    </head>
<body>
    
    <div id="nav">
        <div class="nav_bar">
            <a href="/">
                <div class="logo" style="width:200px;display:flex;align-items:center">
                    <img style="width:40px;height:40px" src="~/Content/image/logo.ico" />
                    <span style="font-size:20px;display:block; margin-left:6px;margin-top:4px; color:#000000;">黑猫TV</span>
                </div>
            </a>

            <ul class="nav_bar_list">

                 @if (ViewBag.Nav == "index")
                 {
                    <li class="active">
                        <a href="/">全部平台</a>
                    </li>
                 }
                 else
                 {
                    <li>
                        <a href="/">全部平台</a>
                    </li>
                 }
                @if (ViewBag.Nav == "bilibili")
                {
                    <li class="active">
                        <a href="/Home/Bilibili">哔哩哔哩</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Home/Bilibili">哔哩哔哩</a>
                    </li>
                }
               

                @if (ViewBag.Nav == "quanmin")
                {
                    <li class="active">
                        <a href="/Home/QuanMin">全民</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Home/QuanMin">全民</a>
                    </li>
                }

                @if (ViewBag.Nav == "huomao")
                {
                    <li class="active">
                        <a href="/Home/HuoMao">火猫</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Home/HuoMao">火猫</a>
                    </li>
                }

                @if (ViewBag.Nav == "ZhanQi")
                {
                    <li class="active">
                        <a href="/Home/ZhanQi">战旗</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Home/ZhanQi">战旗</a>
                    </li>
                }

               
            </ul>


        </div>
    </div>

    @RenderBody()






<style type="text/css">
    body {
        background-color:#f2f2f2;
    }
    a:link {
        color: #563d7c;
        text-decoration: none;
    }

    a:visited {
        color: #563d7c;
        text-decoration: none;
    }

    a:hover {
        color: #563d7c;
        text-decoration: none;
    }

    a:active {
        color: #563d7c;
        text-decoration: none;
    }
    body{
        margin:0;
        padding:0;
    }
    #nav {
        width:100%;
        height:60px;
        background-color:#fff;
        margin:0;
        padding:0;
       
        border-bottom:1px solid #ccc;
    }
    .nav_bar {
        width:1400px;
      display:flex;
      align-items:center;
        height:100%;
        margin:0 auto;
    }
    .nav_bar_list {
        padding:0;
        margin:0;
        list-style-type:none;
      
    }
        .nav_bar_list li {
            margin-left:14px;
            text-align: center;
            line-height: 40px;
            width: 120px;
            height: 40px;
            float: left;
            color: #563d7c;
            font-size: 20px;
        }
            .nav_bar_list li a {
              display:block;
              width:100%;
              height:100%;
             
            }

            .nav_bar_list li:hover {
                border-radius: 18px;
                color: #fff;
                background-color: #3bceb2;
            }
            .nav_bar_list li a:hover {
                color:#fff;
            }
            
            
            .active {
                border-radius: 18px;
                color: #fff;
                background-color: #3bceb2;
            }
        .active a {
            color:#fff;
        }
    .box-shadow-2 {
        -webkit-box-shadow: 0 0 20px #ccc;
        -moz-box-shadow: 0 0 20px #ccc;
        box-shadow: 0 0 20px #ccc;
    }
        .box-shadow-2:hover {
            -webkit-box-shadow: 0 0 20px #ccc;
            -moz-box-shadow: 0 0 20px #ccc;
            box-shadow: 0 0 20px #ccc;
        }
 
    

    
</style>


    <script>
    $(function () {
        $(".col-md-3").mouseover(function () {

            $(this).find(".img").css("filter","brightness(0.5)");

        });

        $(".col-md-3").mouseout(function () {

            $(this).find(".img").css("filter", "brightness(1)");

        });

        $(".box").mouseover(function () {

               $(this).css("border-bottom","2px solid #3bceb2");

        });
        $(".box").mouseout(function () {

            $(this).css("border-bottom", "2px solid #ccc");

        });



    })


    </script>


</body>
</html>
